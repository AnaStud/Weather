<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10_dp"
            android:paddingEnd="@dimen/padding_10_dp"
            android:paddingTop="@dimen/padding_10_dp"
            android:textSize="@dimen/text_size_20_sp"
            tools:text="Москва" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10_dp"
            android:paddingEnd="@dimen/padding_10_dp"
            android:textSize="@dimen/text_size_10_sp"
            tools:text="27/01/2022 21:24:00" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10_dp"
        android:textSize="@dimen/text_size_20_sp"
        tools:text="-10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/feelsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10_dp"
        android:textSize="@dimen/text_size_20_sp"
        tools:text="-12" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size_history"
        android:layout_height="@dimen/icon_size_history" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10_dp"
        android:textSize="@dimen/text_size_20_sp"
        tools:text="cloudy" />

</LinearLayout>